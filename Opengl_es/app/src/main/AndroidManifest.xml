<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.xuserwing.opengldemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>
